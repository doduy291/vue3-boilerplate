{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    // Supplement some options from origin

    /* Module */
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },

    /* JavaScript Support */
    "allowJs": true,

    /* Emit */
    "noEmit": true,

    /* Type Checking */
    "allowUnreachableCode": false
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ],
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["node_modules"]
}
